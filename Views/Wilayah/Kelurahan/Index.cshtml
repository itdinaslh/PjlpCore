@{
    ViewData["Title"] = "Wilayah Kelurahan";
    ViewData["PageName"] = "wilayah_kelurahan";
    ViewBag.Category = "Wilayah";
    ViewBag.Parent = "Master";
    ViewBag.Title = "Kelurahan";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
}

<!--Modal Window-->
<div id='myModal' class='modal fade in' data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">    
    <div class="col-xl-12">
        <button class="btn btn-primary showMe" style="margin-bottom:20px;" data-href="/wilayah/kelurahan/create">Tambah Kelurahan</button>
        <div id="panel-1" class="panel">
            <div class="panel-hdr" role="heading">
                <h2>Data Kelurahan</h2>                
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblData" class="table table-striped table-bordered" data-page-length="5">
                        <thead>
                            <tr>                                
                                <th>Kode</th>
                                <th>Nama Kelurahan</th>
                                <th>Kecamatan</th>
                                <th>Kabupaten/Kota</th>
                                <th>Provinsi</th>                                
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/pages/wilayah/kelurahan.js"></script>    
    <script src="~/js/modalForm.js"></script>
    <script>
        $('#js-page-content').smartPanel();        
    </script>
}