@model KecamatanViewModel

<form action="/wilayah/kecamatan/save" method="post">
    <input type="hidden" asp-for="ExistingID" />
    <input type="hidden" asp-for="IsNew" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.IsNew)
        {
            <h4 class="modal-title">Tambah Data kecamatan</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Kecamatan</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Kode Kecamatan</label>
            <input type="text" asp-for="Kecamatan.KecamatanID" class="form-control" placeholder="Kode Kecamatan..." autocomplete="off" autofocus />
            <span asp-validation-for="Kecamatan.KecamatanID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Nama Kecamatan</label>
            <input type="text" asp-for="Kecamatan.NamaKecamatan" class="form-control" placeholder="Nama Kecamatan..." autocomplete="off" />
            <span asp-validation-for="Kecamatan.NamaKecamatan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Kabupaten/Kota</label>
            <select asp-for="Kecamatan.KabupatenID" class="form-control cSelect" id="sKabupaten">
                @if (Model.Kecamatan.KabupatenID != string.Empty)
                {
                    <option value="@Model.Kecamatan.KabupatenID" selected="selected">@Model.NamaKabupaten</option>
                }
            </select>
            <span asp-validation-for="Kecamatan.KabupatenID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Latitude</label>
            <input type="text" asp-for="Kecamatan.Latitude" class="form-control" placeholder="Latitude..." autocomplete="off" />            
        </div>
        <div class="form-group">
            <label>Longitude</label>
            <input type="text" asp-for="Kecamatan.Longitude" class="form-control" placeholder="Longitude..." autocomplete="off" />            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>