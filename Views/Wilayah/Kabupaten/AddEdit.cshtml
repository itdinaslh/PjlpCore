@model KabupatenViewModel

<form action="/wilayah/kabupaten/save" method="post">
    <input type="hidden" asp-for="ExistingID" />
    <input type="hidden" asp-for="IsNew" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.IsNew)
        {
            <h4 class="modal-title">Tambah Data Kabupaten</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Kabupaten</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Kode Kabupaten/Kota</label>
            <input type="text" asp-for="Kabupaten.KabupatenID" class="form-control" placeholder="Kode Kabupaten/Kota..." autocomplete="off" autofocus />
            <span asp-validation-for="Kabupaten.KabupatenID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Nama Kabupaten/Kota</label>
            <input type="text" asp-for="Kabupaten.NamaKabupaten" class="form-control" placeholder="Nama Kabupaten..." autocomplete="off" autofocus />
            <span asp-validation-for="Kabupaten.NamaKabupaten" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Provinsi</label>
            <select asp-for="Kabupaten.ProvinsiID" class="form-control cSelect" id="sProvinsi">
                @if (Model.Kabupaten.ProvinsiID != string.Empty)
                {
                    <option value="@Model.Kabupaten.ProvinsiID" selected="selected">@Model.NamaProvinsi</option>
                }
            </select>
            <span asp-validation-for="Kabupaten.ProvinsiID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Latitude</label>
            <input type="text" asp-for="Kabupaten.Latitude" class="form-control" placeholder="Latitude..." autocomplete="off" autofocus />            
        </div>
        <div class="form-group">
            <label>Longitude</label>
            <input type="text" asp-for="Kabupaten.Longitude" class="form-control" placeholder="Longitude..." autocomplete="off" autofocus />            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>