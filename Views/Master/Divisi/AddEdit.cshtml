@model DivisiViewModel

<form action="/master/divisi/save" method="post">
    <input type="hidden" asp-for="ExistingID" />
    <input type="hidden" asp-for="IsNew" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.IsNew)
        {
            <h4 class="modal-title">Tambah Data Divisi</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Divisi</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Divisi</label>
            <input type="text" asp-for="Divisi.NamaDivisi" class="form-control" placeholder="Isi nama divisi..." autocomplete="off" autofocus />
            <span asp-validation-for="Divisi.NamaDivisi" class="text-danger"></span>
        </div> 
        <div class="form-group">
            <label>Nama Bidang</label>
            <select asp-for="Divisi.BidangID" class="form-control cSelect" id="sBidang">
                @if (Model.Divisi.BidangID != Guid.Empty)
                {
                    <option value="@Model.Divisi.BidangID" selected="selected">@Model.NamaBidang</option>
                }
            </select>
            <span asp-validation-for="Divisi.BidangID" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>