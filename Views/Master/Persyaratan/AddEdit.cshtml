@model Persyaratan

<form action="/master/persyaratan/save" method="post">
    <input type="hidden" asp-for="PersyaratanID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.PersyaratanID == 0)
        {
            <h4 class="modal-title">Tambah Data Persyaratan</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Persyaratan</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Persyaratan</label>
            <input type="text" asp-for="NamaPersyaratan" class="form-control" placeholder="Isi nama persyaratan..." autocomplete="off" autofocus />
            <span asp-validation-for="NamaPersyaratan" class="text-danger"></span>
        </div>
        @*<div class="form-group">
                <div class="custom-control custom-checkbox custom-checkbox-circle">
                    <input type="checkbox" asp-for="Active" class="custom-control-input" id="chkActive" />
                    <label class="custom-control-label" for="chkActive">Aktif</label>
                </div>
            </div>*@
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>