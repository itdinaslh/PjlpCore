@model LokasiKerja

<form action="/master/lokasi-kerja/store" method="post">
    <input type="hidden" asp-for="LokasiKerjaID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.LokasiKerjaID == 0)
        {
            <h4 class="modal-title">Tambah Lokasi Kerja</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Lokasi Kerja</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Lokasi Kerja</label>
            <input type="text" asp-for="NamaLokasi" class="form-control" placeholder="Nma lokasi kerja..." autocomplete="off" autofocus />
            <span asp-validation-for="NamaLokasi" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>
