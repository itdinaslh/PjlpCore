@model Bidang

<form action="/master/bidang/save" method="post">
    <input type="hidden" asp-for="BidangID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.BidangID == Guid.Empty)
        {
            <h4 class="modal-title">Tambah Data Bidang</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Bidang</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Bidang</label>
            <input type="text" asp-for="NamaBidang" class="form-control" placeholder="Isi nama bidang..." autocomplete="off" autofocus />
            <span asp-validation-for="NamaBidang" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Nama Pimpinan</label>
            <input type="text" asp-for="KepalaBidang" class="form-control" placeholder="Isi nama pimpinan..." autocomplete="off" />            
        </div>    
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>