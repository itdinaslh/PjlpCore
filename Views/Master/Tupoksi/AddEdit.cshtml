@model TupoksiViewModel

<form action="/master/tupoksi/save" method="post">
    <input type="hidden" asp-for="ExistingID" />
    <input type="hidden" asp-for="IsNew" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        @if (Model.IsNew)
        {
            <h4 class="modal-title">Tambah Data Tupoksi</h4>
        }
        else
        {
            <h4 class="modal-title">Edit Data Tupoksi</h4>
        }

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nama Tupoksi</label>
            <input type="text" asp-for="Tupoksi.NamaTupoksi" class="form-control" placeholder="Isi nama tupoksi..." autocomplete="off" autofocus />
            <span asp-validation-for="Tupoksi.NamaTupoksi" class="text-danger"></span>
        </div> 
        <div class="form-group">
            <label>Nama Divisi</label>
            <select asp-for="Tupoksi.DivisiID" class="form-control cSelect" id="sDivisi">
                @if (Model.Tupoksi.DivisiID != Guid.Empty)
                {
                    <option value="@Model.Tupoksi.DivisiID" selected="selected">@Model.NamaDivisi</option>
                }
            </select>
            <span asp-validation-for="Tupoksi.DivisiID" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>