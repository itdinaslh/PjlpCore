@model DashboardVM

@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageName"] = "home_dashboard";
    ViewData["Category1"] = "Beranda";
}

@section styles { 
    <link rel="stylesheet" href="~/css/statictics/chartjs/chartjs.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
}

<div class="row">
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-primary-300 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.CountPelamar
                    <small class="m-0 l-h-n">Total Pelamar</small>
                </h3>
            </div>
            <i class="fal fa-user position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n1" style="font-size:6rem"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-warning-400 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.CountBaru
                    <small class="m-0 l-h-n">Total Pelamar Baru</small>
                </h3>
            </div>
            <i class="fal fa-gem position-absolute pos-right pos-bottom opacity-15  mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-success-200 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.CountLama
                    <small class="m-0 l-h-n">Total Pelamar Lama</small>
                </h3>
            </div>
            <i class="fal fa-lightbulb position-absolute pos-right pos-bottom opacity-15 mb-n5 mr-n6" style="font-size: 8rem;"></i>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="p-3 bg-info-200 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.CountBidang
                    <small class="m-0 l-h-n">Total Bidang</small>
                </h3>
            </div>
            <i class="fal fa-globe position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 col-sm-12">
        <div class="panel">
            <div class="panel-hdr orange-gradient" role="heading">
                <h2>Rekapitulasi Pelamar Lama</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Bidang</th>
                                <th class="text-center">Jumlah Pelamar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int clama = 1; }
                            @foreach (var p in Model.PelamarLama)
                            {
                                <tr>
                                    <td>@clama</td>
                                    <td>@p.NamaBidang</td>
                                    <td class="text-center">@p.JumlahPelamar</td>
                                </tr>
                                clama++;
                            }
                            <tr>
                                <td colspan="2" class="text-center">Jumlah</td>
                                <td class="text-center">@Model.CountLama</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>                
    </div>
    <div class="col-lg-6 col-sm-12">
        <div class="panel">
            <div class="panel-hdr green-gradient" role="heading">
                <h2>Rekapitulasi Pelamar Baru</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Bidang</th>
                                <th class="text-center">Jumlah Pelamar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int cbaru = 1; }
                            @foreach (var p in Model.PelamarBaru)
                            {
                                <tr>
                                    <td>@cbaru</td>
                                    <td>@p.NamaBidang</td>
                                    <td class="text-center">@p.JumlahPelamar</td>
                                </tr>
                                cbaru++;
                            }
                            <tr>
                                <td colspan="2" class="text-center">Jumlah</td>
                                <td class="text-center">@Model.CountBaru</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> 
    </div>
</div>

@section scripts {
    <script src="~/js/statistics/chartjs/chartjs.bundle.js"></script>
}