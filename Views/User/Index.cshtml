@{
    ViewData["Title"] = "User Bidang";
    ViewData["PageName"] = "user_bidang";
    ViewData["Category1"] = "User";    
    ViewBag.Title = "User Bidang";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
}

<!-- Modal Form -->
<div id='myModal' class='modal fade in' data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">    
    <div class="col-xl-12">
        <a class="btn btn-primary showMe" style="margin-bottom:20px;" href="/userbidang/manage">Tambah User Bidang</a>
        <div id="panel-1" class="panel">
            <div class="panel-hdr" role="heading">
                <h2>Tabel Data User Bidang</h2>                
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblData" class="table table-striped table-bordered" data-page-length="5">
                        <thead>
                            <tr>
                                <th style="width: 15%;">User ID</th>
                                <th>Name</th>
                                <th>User Full Name</th>
                                <th>Role Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/pages/main/user.js"></script>
    <script src="~/js/modalForm.js"></script>
    <script>
        $('#js-page-content').smartPanel();        
    </script>
}