@{
    ViewData["Title"] = "Data Laporan";
    ViewData["PageName"] = "data_report";
    ViewData["Category1"] = "Data";
    ViewBag.Parent = "Data";
    ViewBag.Title = "Report";
}

@section styles {
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
    <link rel="stylesheet" href="~/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/dist/bootstrap-clockpicker.min.css">
    <link rel="stylesheet" media="screen, print" href="~/css/miscellaneous/fullcalendar/fullcalendar.bundle.css">


}

    <!--Modal Window-->
    <div class="modal fade" id="calendarModal">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-transparent">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title" id="Judul">Add Your Schedule</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form>
                        <div class="row form-group">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Tanggal:</label>
                                    <input type="hidden" class="form-control" id="ID">
                                    <input type="text" readonly class="form-control dtpicker" id="Tanggal">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Jam Mulai</label>
                                    <input name="TanggalLahir" id="Masuk" class="form-control clockpicker pull-center" data-placement="top" data-align="top" data-autoclose="true" placeholder="00.00" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Jam Selesai</label>
                                    <input name="TanggalLahir" id="Keluar" class="form-control clockpicker pull-center" data-placement="top" data-align="top" data-autoclose="true" placeholder="00.00" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label>Tupoksi</label>
                            <input type="text" name="KepalaBidang" class="form-control" placeholder="Isi Kegiatan..." autocomplete="off" id="Title" />
                        </div>
                        <div class="form-group">
                            <label>Aktivitas</label>
                            <input type="text" name="KepalaBidang" class="form-control" placeholder="Isi Aktivitas..." autocomplete="off" id="deskripsi" />
                        </div>
                    </form>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Tutup</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Hapus</button>
                    <button type="button" class="btn btn-success">Simpan</button>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                
                <div class="panel-container show">
                    <div class="panel-content">
                        <div id="calendar"></div>
                        <!-- Modal : TODO -->
                        <!-- Modal end -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/dist/bootstrap-clockpicker.min.js"></script>
    <script src="~/js/dependency/moment/moment.js"></script>
    <script src="~/js/miscellaneous/fullcalendar/fullcalendar.bundle.js"></script>
    <script src="~/pages/report.js"></script>
    <script src="~/js/modalForm.js"></script>

