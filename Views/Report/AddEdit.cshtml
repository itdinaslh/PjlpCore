
<form action="/master/bidang/save" method="post">
    <input type="hidden"name="BidangID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
      
            <h4 class="modal-title">Tambah Data Bidang</h4>

        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Tanggal</label>
            <input name="TanggalLahir" class="form-control dtpicker" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Jam Mulai</label>
            <input name="TanggalLahir" class="form-control clockpicker pull-center" data-placement="top" data-align="top" data-autoclose="true"  placeholder="00.00"/>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Jam Selesai</label>
            <input name="TanggalLahir" class="form-control clockpicker pull-center" data-placement="top" data-align="top" data-autoclose="true" placeholder="00.00" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Kegiatan</label>
            <input type="text"name="KepalaBidang" class="form-control" placeholder="Isi nama pimpinan..." autocomplete="off" />            
        </div>    
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>