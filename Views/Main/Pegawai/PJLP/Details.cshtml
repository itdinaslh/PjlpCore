@model PegawaiVM

@{
    ViewData["Title"] = "Data PJLP";
    ViewData["PageName"] = "data_pjlp";
    ViewData["Category1"] = "Pegawai";
    ViewBag.Category = "Pegawai";
    ViewBag.Title = "Data PJLP";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
}

<div x-data="{ modul: 1 }">
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <div class="card" style="width:100%; margin-bottom:20px;">
                <div class="card-header bg-primary-700 bg-success-gradient d-flex align-items-center flex-wrap text-white">
                    @Model.Pegawai.NamaPegawai
                </div>
                <img class="card-img-top" src="/img/user.png" alt="Card image cap">
            </div>

            <ul class="nav-menu" style="margin-bottom:20px;">
                <li style="border-bottom:1px solid white">
                    <button
                        x-on:click="modul = 1"
                        class="btn text-white btn-primary" style="width:100%; height: 45px; font-size:14px;"
                        :class="modul == 1 ? 'bg-primary-900 bg-warning-gradient' : ''">
                            Biodata
                     </button>
                </li>
                <li style="border-bottom:1px solid white">
                    <button
                        x-on:click="modul = 2"
                        class="text-white btn-primary" style="width:100%; height: 45px; font-size:14px;"
                        :class="modul == 2 ? 'bg-primary-900 bg-warning-gradient' : ''">
                            Alamat
                    </button>
                </li>
                <li style="border-bottom:1px solid white">
                    <button
                        x-on:click="modul = 3"
                        class="text-white btn-primary" style="width:100%; height: 45px; font-size:14px;"
                        :class="modul == 3 ? 'bg-primary-900 bg-warning-gradient' : 'btn-primary'">
                            Lainnya
                    </button>
                </li>
            </ul>
            <div class="row">
                <div class="col-md-12 text-right">
                    <a type="button" class="btn btn-warning mr-2" asp-action="PJLP" asp-controller="Pegawai">Kembali</a>
                    <a href="javascript:void(0)" data-toggle="tooltip" data-id="" data-original-title="Verifikasi"
                        class="btn btn-success verify">Verifikasi</a>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
        <div class="col-md-9 col-sm-12">
            <div class="row">
                <div class="col-lg-12">
                    <div x-show="modul == 1" x-transition>
                        <partial name="~/Views/Main/Pegawai/PJLP/Biodata.cshtml" />
                    </div>
                    <div x-show="modul == 2" x-transition>                        
                        <div class="d-none" :class="modul == 2 ? 'd-block' : 'd-none'">
                            <partial name="~/Views/Main/Pegawai/PJLP/Alamat.cshtml" />
                        </div>
                    </div>
                    <div x-show="modul == 3" x-transition>
                        <div class="d-none" :class="modul == 3 ? 'd-block' : 'd-none'">
                            <partial name="~/Views/Main/Pegawai/PJLP/Lainnya.cshtml" />
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>




