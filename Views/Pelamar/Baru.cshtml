@model IndexPelamarVM

@{
    ViewData["Title"] = "Data Pelamar Baru";
    ViewData["PageName"] = "data_pjlp";
    //ViewData["Category1"] = "Pegawai";
    ViewBag.Parent = "Pelamar";
    ViewBag.Category = "Pelamar Baru";
    ViewBag.Title = "Data Pelamar Baru";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
    <link rel="stylesheet" href="~/css/loader.css" />
}

<div class="row">
    <div class="col-xl-12">
        <div class="panel">
            <div class="panel-hdr" role="heading">
                <h2>Filter Data</h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label>Bidang</label>
                            @if (Model.SingleBidang)
                            {
                                <select id="myBId" class="form-control">
                                    <option value="@Model.BidangID" selected>@Model.NamaBidang</option>
                                </select>
                            }
                            else
                            {
                                <select id="sBidang" class="form-control"></select>
                            }
                        </div>
                        <div class="col-md-4 mb-2">
                            <label>Jabatan</label>
                            <select id="sJabatan" class="form-control"></select>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label>Status Seleksi</label>
                            <select id="sStatus" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr" role="heading">
                <h2>Tabel Data Pelamar Baru</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblData" class="table table-striped table-bordered" data-page-length="5">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>NIK</th>
                                <th>Bidang</th>
                                <th>Nama Jabatan</th>
                                <th>Usia</th>
                                <th>Status Verifikasi</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        <div class="text-right">
            <button id="btnDownload" class="btn btn-primary">Download Excel</button>
        </div>
    </div>
</div>

<div class="overlay"></div>

@section scripts {
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/pages/pelamar/baru-1.0.2.js"></script>
    <script src="~/pages/pelamar/populate.js"></script>
    <script>
        $('#js-page-content').smartPanel();
    </script>
}