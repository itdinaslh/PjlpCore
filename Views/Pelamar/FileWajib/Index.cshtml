@model FileWajibVM

@{
    ViewData["Title"] = "File Wajib Pelamar";
    ViewData["PageName"] = "file_wajib_pelamar";
    ViewData["Category1"] = "Pelamar";
    ViewBag.Parent = "Pelamar";
    ViewBag.Title = "File Wajib Pelamar";
}

@section styles {    
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/addon.css" />
}

<div>
    <div class="row">
        <div class="col-xl-12">
            <div class="panel">
                <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                    <h2>File Wajib Pelamar</h2>
                </div>
                <div class="panel-container show">
                    <form id="formdata" method="post" action="/pelamar/files/update">
                        <div class="panel-content">
                            <div class="row">
                                <div class="col-xl-4">
                                    <div class="form-group">
                                        <label for="">Status Pelamar</label>
                                        <select asp-for="IsNew" id="theNew" class="form-control">
                                            <option value="false">Pelamar Lama</option>
                                            <option value="true">Pelamar Baru</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Pilih Bidang</label>
                                        <select id="sBidang" asp-for="BidangID" class="form-control" required>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Pilih Jabatan</label>
                                        <select id="sJabatan" asp-for="JabatanID" class="form-control" required>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xl-4">
                                                <div class="text-left">
                                                    <button class="btn btn-primary" type="submit">Simpan Data</button>
                                                </div>
                                            </div>
                                            <div class="col-xl-8">
                                                <div class="text-right">
                                                    <button class="btn btn-success" type="button" id="SelectAll">Pilih Semua</button>
                                                    <button class="btn btn-danger" type="button" id="ClearAll">Hapus Semua</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-xs-6">
                                    <div class="frame-wrap" style="margin-top:23px; padding-left: 25px;">
                                        <div class="demo">
                                            @foreach (var file in Model.ListSyarat!)
                                            {                                                
                                                @if (file.ID <= 15)
                                                {
                                                    string myID = "chk" + file.ID;
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" name="Files" class="custom-control-input myChk" value="@file.ID" id="@myID" checked="@file.Selected" />
                                                        <label class="custom-control-label" for="@myID">@file.Text</label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-xs-6">
                                    <div class="frame-wrap" style="margin-top:23px;">
                                        <div class="demo">
                                            @foreach (var file in Model.ListSyarat)
                                            {
                                                @if (file.ID > 15)
                                                {
                                                    string myID = "chk" + file.ID;
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" name="Files" class="custom-control-input myChk" value="@file.ID" id="@myID" checked="@file.Selected" />
                                                        <label class="custom-control-label" for="@myID">@file.Text</label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>                    
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>    
    <script src="~/pages/pelamar/files.js"></script>
    <script>
        $('#js-page-content').smartPanel();
    </script>
}


